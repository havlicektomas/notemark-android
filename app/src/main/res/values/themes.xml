<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NoteMark" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.NoteMark.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/note_mark_blue</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.NoteMark</item>
    </style>
</resources>